{
  "name": "WaSecure",
  "description": "Real end-to-end encryption",
  "version": "0.3",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_scripts.js"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_icon": "assets/images/icon.png",
    "default_popup": "html/index.html",
    "default_title": "WA Secure Extension"
  }
}